{{#section 'js'}}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  jQuery(document).ready(function($) {
    $(".clickable-row").click(function() {
        console.log(this);
        window.location = $(this).data("href");
    });
  });
</script>
{{/section}}

<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>My Courses List</h4>
  </div>
  <div class="card-body">
    {{#if this.empty}}
    <h5 class="card-title">No course added yet!</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    {{else}}
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Course Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.listEnroll}}
        <tr>
          <th class="clickable-row" data-href="/product/detail/{{id}}" scope="row">{{id}}</th>
          <td class="clickable-row" data-href="/product/detail/{{id}}">{{title}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}
  </div>
</div>