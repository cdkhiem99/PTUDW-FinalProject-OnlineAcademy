{{#section 'js'}}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  jQuery(document).ready(function($) {
        $(".clickable-row").click(function() {
            console.log(this);
            window.location = $(this).data("href");
        });
    });
</script>
{{/section}}

<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>My Wishes Courses</h4>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Course Name</th>
          <td class="text-right">
            <a name="" id="{{id}}" class="btn btn-lg btn-primary" role="button" href="/lecturer/addCourse">
              <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
      </thead>
      <tbody>
        {{#each this.myCourseList}}
        <tr>
          <th class="clickable-row" data-href="/product/detail/{{id}}" scope="row">{{id}}</th>
          <td class="clickable-row" data-href="/product/detail/{{id}}">{{title}}</td>
          <td class="text-right">
            <a name="" id="{{id}}" class="btn btn-lg btn-primary" role="button" href="/lecturer/editCourse">
              <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>